# https://ghostty.org/docs/config/reference
# ghostty +show-config --default --docs
# ghostty +list-fonts
font-family = "Hack"
font-size = 22
font-thicken = false

bell-features = no-system,no-audio,no-attention,no-title,no-border

shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false

cursor-color = ff00ff
background = dddddd
foreground = 4c4d4b
selection-foreground = dddddd
selection-background = 4c4d4b

palette = 0=#4c4d4b
palette = 1=#af005f
palette = 2=#5f8700
palette = 3=#d75f00
palette = 4=#005faf
palette = 5=#8700af
palette = 6=#008b8b
palette = 7=#fefff0
palette = 8=#808080
palette = 9=#af005f
palette = 10=#5f8700
palette = 11=#d75f00
palette = 12=#005faf
palette = 13=#8700af
palette = 14=#008b8b
palette = 15=#ffffff

keybind = super+left=previous_tab
keybind = super+right=next_tab
